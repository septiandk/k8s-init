vrrp_instance VI_1 {
    state MASTER
    interface {{ interface }}
    virtual_router_id 51
    priority 101
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ keepalived_password }}
    }
    virtual_ipaddress {
        {{ vip }}
    }
    track_script {
        chk_apiserver
    }
}
